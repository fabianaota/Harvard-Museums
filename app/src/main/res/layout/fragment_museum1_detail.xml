<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Museum1DetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_museumDetail_id"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:src="@drawable/image_museum"
            />

        <TextView
            android:id="@+id/textView_museum1_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/textView_museum1_description_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

</ScrollView>