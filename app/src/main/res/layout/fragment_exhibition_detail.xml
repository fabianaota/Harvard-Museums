<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragment.ExhibitionDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_title_exhibition_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Animal-Shaped Vessels from the Ancient World: Feasting with Gods, Heroes, and Kings"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_date_exhibition_id"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_calendar"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                />

            <TextView
                android:id="@+id/textView_date_exhibition_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="36dp"
                android:layout_toRightOf="@+id/imageView_date_exhibition_id"
                android:text="September 7, 2018â€“January 6, 2019"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/imageView_local_exhibition_id"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_local"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="22dp"
                android:layout_below="@id/imageView_date_exhibition_id"
                />

            <TextView
                android:id="@+id/textView_local_exhibition_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="34dp"
                android:layout_toRightOf="@id/imageView_local_exhibition_id"
                android:layout_below="@+id/textView_date_exhibition_id"
                android:text="Special Exhibitions Gallery - Floor Plan"
                />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_exhibitionDetail_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/textView_exhibition_description_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="391dp"
            android:text="@string/exhibition_detail"/>

    </LinearLayout>

</ScrollView>